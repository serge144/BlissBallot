<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="#a0266797" />
            <gradient android:startColor="#b42977ae" android:endColor="#b42873a1" android:angle="270"/>
            <corners android:radius="13dp" />
        </shape>
    </item>

    <item android:bottom="10px"
        android:left="3px"
        android:right="3px"
        android:top="3px"
        >
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="45"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <corners android:radius="13dp" />
        </shape>
    </item>

</layer-list>